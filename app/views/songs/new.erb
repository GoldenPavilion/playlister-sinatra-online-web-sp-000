<h1>Add a New Song</h1>
<form action="/songs" method="post">
    Song Name: <input type="text" id="Name" name="name"><br>
    Artist: <input type="text" id="Artist Name" name="artist"><br>
    Genre: 
    <% @genres.each do |genre| %>
        <input type="checkbox" 
        id="<%= genre.name %>" 
        name="song[genres][]" 
        value="<%= genre.id %>">
        <%= genre.name %><br>
    <% end %>
    <input type="submit" value="Create Artist">
</form>